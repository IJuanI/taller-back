{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "experimentalDecorators": true
  },
  "typeRoots": [
    "../node_modules/@types"
  ],
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "../layout/**/*.d.ts",
    "../services/**/*.d.ts",
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
